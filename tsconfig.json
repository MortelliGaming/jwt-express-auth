{
    "compilerOptions": {
        "skipLibCheck": true,
        "lib": [
            "es6"
         ],
         "target": "es6",
         "module": "commonjs",
         "outDir": "dist",
         "resolveJsonModule": true,
         "emitDecoratorMetadata": true,
         "esModuleInterop": true,
         "experimentalDecorators": true,
      },
      "include": ["src/**/*.ts"],
      "exclude": ["node_modules/*", "**/*.spec.ts"]
}